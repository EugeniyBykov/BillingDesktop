<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Label Content="IP" Margin="10" />
            <TextBox x:Name="ip_tb"  Width="120" Margin="10" IsReadOnly="True" />
            <Label Content="Port" Margin="30, 10, 10, 10" />
            <TextBox x:Name="port_tb"  Width="120" Margin="10" IsReadOnly="True" />


        </WrapPanel>
        <GroupBox Header="Журнал" FontSize="15">
            <DockPanel>
                <TextBox x:Name="jurnal_tb" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</Window>
